{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chiastack/ui",
  "version": "0.0.2-beta.1",
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "sideEffects": false,
  "scripts": {
    "build": "tsup && tailwindcss -i ./src/style/styles.css -o ./dist/styles.css",
    "dev": "concurrently \"tsup --watch\" \"tailwindcss -i ./src/style/styles.css -o ./dist/styles.css --watch\"",
    "clean": "git clean -xdf .turbo node_modules dist",
    "lint": "eslint \"src/**/*.{ts,js,tsx,jsx}\" --fix",
    "type:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@chiastack/tsconfig": "workspace:*",
    "react": "catalog:react-is",
    "react-dom": "catalog:react-is",
    "tsdown": "catalog:"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "exports": {
    "./package.json": "./package.json"
  }
}
