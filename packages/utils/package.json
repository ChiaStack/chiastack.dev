{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chiastack/utils",
  "version": "0.0.1-beta.3",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .turbo node_modules dist",
    "lint": "eslint",
    "type:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./set-search-params": {
      "require": "./dist/set-search-params/set-search-params.cjs",
      "import": "./dist/set-search-params/set-search-params.mjs",
      "types": "./dist/set-search-params/set-search-params.d.mts"
    },
    "./day": {
      "require": "./dist/day/day.cjs",
      "import": "./dist/day/day.mjs",
      "types": "./dist/day/day.d.mts"
    },
    "./try-catch": {
      "require": "./dist/try-catch/try-catch.cjs",
      "import": "./dist/try-catch/try-catch.mjs",
      "types": "./dist/try-catch/try-catch.d.mts"
    },
    "./is": {
      "require": "./dist/is/is.cjs",
      "import": "./dist/is/is.mjs",
      "types": "./dist/is/is.d.mts"
    },
    "./delay": {
      "require": "./dist/delay/delay.cjs",
      "import": "./dist/delay/delay.mjs",
      "types": "./dist/delay/delay.d.mts"
    },
    "./server": {
      "require": "./dist/server/server.cjs",
      "import": "./dist/server/server.mjs",
      "types": "./dist/server/server.d.mts"
    }
  },
  "typesVersions": {
    "*": {
      "set-search-params": [
        "./dist/set-search-params/set-search-params.d.mts"
      ],
      "day": [
        "./dist/day/day.d.mts"
      ],
      "try-catch": [
        "./dist/try-catch/try-catch.d.mts"
      ],
      "is": [
        "./dist/is/is.d.mts"
      ],
      "delay": [
        "./dist/delay/delay.d.mts"
      ],
      "server": [
        "./dist/server/server.d.mts"
      ]
    }
  },
  "devDependencies": {
    "@chiastack/eslint": "workspace:*",
    "@chiastack/tsconfig": "workspace:*",
    "dayjs": "catalog:",
    "eslint": "catalog:eslint",
    "tsdown": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "dayjs": "^1.11.19",
    "zod": "^3.24.0 || ^4.0.0"
  }
}
