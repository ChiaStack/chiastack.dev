{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chiastack/utils",
  "version": "2.1.1",
  "keywords": [
    "chiastack",
    "typescript",
    "utils"
  ],
  "license": "MIT",
  "author": {
    "name": "Chia1104",
    "email": "yuyuchia7423@gmail.com",
    "url": "https://github.com/chia1104"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChiaStack/chiastack.dev.git",
    "directory": "packages/utils"
  },
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "typesVersions": {
    "*": {
      "is": [
        "./dist/is/is.d.mts"
      ],
      "server": [
        "./dist/server/server.d.mts"
      ],
      "algorithms": [
        "./dist/algorithms/algorithms.d.mts"
      ],
      "mathex": [
        "./dist/mathex/mathex.d.mts"
      ],
      "set-search-params": [
        "./dist/set-search-params/set-search-params.d.mts"
      ]
    }
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./is": {
      "import": "./dist/is/is.mjs",
      "types": "./dist/is/is.d.mts"
    },
    "./server": {
      "import": "./dist/server/server.mjs",
      "types": "./dist/server/server.d.mts"
    },
    "./algorithms": {
      "import": "./dist/algorithms/algorithms.mjs",
      "types": "./dist/algorithms/algorithms.d.mts"
    },
    "./mathex": {
      "import": "./dist/mathex/mathex.mjs",
      "types": "./dist/mathex/mathex.d.mts"
    },
    "./set-search-params": {
      "import": "./dist/set-search-params/set-search-params.mjs",
      "types": "./dist/set-search-params/set-search-params.d.mts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .turbo node_modules dist",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "type:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@chiastack/tsconfig": "workspace:*",
    "@types/node": "catalog:",
    "oxlint": "catalog:oxc",
    "tsdown": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "zod": "^3.24.0 || ^4.0.0"
  }
}