{
  "$schema": "https://json.schemastore.org/package",
  "name": "@chiastack/services",
  "version": "2.0.7",
  "keywords": [
    "chiastack",
    "services"
  ],
  "license": "MIT",
  "author": {
    "name": "Chia1104",
    "email": "yuyuchia7423@gmail.com",
    "url": "https://github.com/chia1104"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChiaStack/chiastack.dev.git",
    "directory": "packages/services"
  },
  "type": "module",
  "typesVersions": {
    "*": {
      "captcha": [
        "./dist/captcha/captcha.d.mts"
      ],
      "demo": [
        "./dist/demo/demo.d.mts"
      ],
      "demo/env": [
        "./dist/demo/env.d.mts"
      ]
    }
  },
  "exports": {
    "./package.json": "./package.json",
    "./captcha": {
      "import": "./dist/captcha/captcha.mjs",
      "types": "./dist/captcha/captcha.d.mts"
    },
    "./demo": {
      "import": "./dist/demo/demo.mjs",
      "types": "./dist/demo/demo.d.mts"
    },
    "./demo/env": {
      "import": "./dist/demo/env.mjs",
      "types": "./dist/demo/env.d.mts"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "clean": "git clean -xdf .turbo node_modules dist",
    "lint": "oxlint",
    "lint:fix": "oxlint --fix",
    "type:check": "tsc --noEmit"
  },
  "devDependencies": {
    "@chiastack/oxlint": "workspace:*",
    "@chiastack/tsconfig": "workspace:*",
    "@chiastack/utils": "workspace:*",
    "@types/node": "catalog:",
    "ky": "catalog:",
    "oxlint": "catalog:oxc",
    "tsdown": "catalog:",
    "zod": "catalog:"
  },
  "peerDependencies": {
    "@chiastack/utils": "^2.0.4"
  }
}