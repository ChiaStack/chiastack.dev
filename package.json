{
  "$schema": "https://json.schemastore.org/package",
  "name": "chiastack.dev",
  "version": "3.0.0",
  "private": true,
  "license": "MIT",
  "author": {
    "name": "Chia1104",
    "email": "yuyuchia7423@gmail.com",
    "url": "https://github.com/chia1104"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "playground/*"
  ],
  "sideEffects": false,
  "scripts": {
    "release": "changeset publish",
    "version": "changeset version",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary",
    "version:beta": "changeset version --snapshot beta",
    "release:beta": "changeset publish --tag beta",
    "prepare": "husky",
    "postinstall": "manypkg check",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "oxfmt",
    "format:check": "oxfmt --check",
    "type:check": "turbo run type:check",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean --parallel",
    "test": "vitest run",
    "test:watch": "vitest",
    "update-deps:all": "pnpm up --latest --filter '@chiastack/*' --filter docs --filter vite-area --filter next-area",
    "update-deps:apps": "pnpm up --latest --filter docs --filter vite-area --filter next-area",
    "update-deps:packages": "pnpm up --latest --filter '@chiastack/*'",
    "changelog-gen": "./target/release/changelog-gen"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@chiastack/oxlint": "workspace:*",
    "@chiastack/tsconfig": "workspace:*",
    "@manypkg/cli": "^0.25.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@turbo/gen": "^2.8.11",
    "dotenv": "^17.3.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "catalog:oxc",
    "oxlint": "catalog:oxc",
    "tsx": "^4.21.0",
    "turbo": "2.8.11",
    "typescript": "catalog:",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,mts,tsx}": [
      "oxfmt --no-error-on-unmatched-pattern"
    ],
    "*.{json,md}": [
      "oxfmt --no-error-on-unmatched-pattern"
    ]
  },
  "engines": {
    "node": ">=22.*"
  },
  "packageManager": "pnpm@10.25.0",
  "manypkg": {
    "ignoredRules": [
      "ROOT_HAS_PROD_DEPENDENCIES"
    ],
    "workspaceProtocol": "require"
  }
}
