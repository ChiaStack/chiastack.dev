{
  "$schema": "https://json.schemastore.org/package",
  "name": "chiastack.dev",
  "version": "3.0.0",
  "private": true,
  "sideEffects": false,
  "license": "MIT",
  "author": {
    "name": "Chia1104",
    "email": "yuyuchia7423@gmail.com",
    "url": "https://github.com/chia1104"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "playground/*"
  ],
  "scripts": {
    "release": "changeset publish",
    "version": "changeset version",
    "version:canary": "changeset version --snapshot canary",
    "release:canary": "changeset publish --tag canary",
    "version:beta": "changeset version --snapshot beta",
    "release:beta": "changeset publish --tag beta",
    "prepare": "husky",
    "postinstall": "manypkg check",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,cjs,mjs,ts,tsx,md,vue}\"",
    "type:check": "turbo run type:check",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo clean --parallel",
    "test": "vitest run",
    "test:watch": "vitest",
    "update-deps:all": "pnpm up --latest --filter '@chiastack/*' --filter docs --filter vite-area",
    "changelog-gen": "./target/release/changelog-gen"
  },
  "engines": {
    "node": ">=22.*"
  },
  "packageManager": "pnpm@10.22.0",
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@chiastack/tsconfig": "workspace:*",
    "@manypkg/cli": "^0.25.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@turbo/gen": "^2.6.1",
    "dotenv": "^17.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "tsx": "^4.20.6",
    "turbo": "2.6.1",
    "typescript": "catalog:",
    "vitest": "^4.0.10"
  },
  "manypkg": {
    "ignoredRules": [
      "ROOT_HAS_PROD_DEPENDENCIES"
    ],
    "workspaceProtocol": "require"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,mts,tsx}": [
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
