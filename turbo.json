{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        ".cache/tsbuildinfo.json"
      ]
    },
    "lint": {
      "dependsOn": ["^build"],
      "cache": true,
      "outputs": [".cache/.eslintcache"]
    },
    "type:check": {
      "dependsOn": ["^build"],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "test:watch": {
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "start": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "test:e2e": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "playwright-report/**"],
      "cache": true
    }
  },
  "globalEnv": ["HOST", "PORT", "NODE_ENV", "ANALYZE", "CI"]
}
